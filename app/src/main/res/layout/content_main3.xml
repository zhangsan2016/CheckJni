<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="example.ldgd.com.checkjni.activity.Main2Activity"
    tools:showIn="@layout/activity_main2">


    <TextView
        android:id="@+id/StatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status3" />


    <Button
        android:id="@+id/StartRecordingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartRecord"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/StopRecordingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopRecor"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/StartPlaybackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartPlay"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/StopPlaybackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopPlay"
        android:textAllCaps="false" />


</LinearLayout>
